{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev Server",
      "type": "shell",
      "command": "bun",
      "args": ["run", "dev"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "bun",
      "args": ["run", "build"],
      "group": "build",
      "problemMatcher": "$tsc"
    },
    {
      "label": "Type Check",
      "type": "shell",
      "command": "bun",
      "args": ["run", "type-check"],
      "group": "test",
      "problemMatcher": "$tsc"
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "bun",
      "args": ["run", "lint"],
      "group": "test",
      "problemMatcher": "$eslint-stylish"
    },
    {
      "label": "Test",
      "type": "shell",
      "command": "bun",
      "args": ["run", "test"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Format",
      "type": "shell",
      "command": "bun",
      "args": ["run", "format"],
      "group": "none",
      "problemMatcher": []
    }
  ]
}